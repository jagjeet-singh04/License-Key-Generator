{
  "version": 2,
  "builds": [
    { "src": "api/generate.js", "use": "@vercel/node" },
    { "src": "vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "/api/generate.js" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
